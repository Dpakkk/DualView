{
  "name": "dualview",
  "displayName": "DualView",
  "description": "VS Code extension with dual view functionality",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dualview.open",
        "title": "DualView: Open"
      },
      {
        "command": "dualview.logout",
        "title": "DualView: Sign Out"
      }
    ],
    "configuration": {
      "title": "DualView",
      "properties": {
        "dualview.clerkPublishableKey": {
          "type": "string",
          "default": "",
          "description": "Clerk Publishable Key (pk_...)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {}
}

