{
  "name": "dualview",
  "displayName": "DualView Live Preview",
  "description": "Auto-detect dev servers and preview mobile + desktop views simultaneously",
  "version": "0.1.0",
  "publisher": "dualview",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Visualization"
  ],
  "keywords": [
    "preview",
    "live",
    "mobile",
    "responsive",
    "development"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dualview.openPreview",
        "title": "DualView: Open Preview",
        "icon": "$(device-mobile)"
      },
      {
        "command": "dualview.attachUrl",
        "title": "DualView: Attach to URL"
      },
      {
        "command": "dualview.serveFolder",
        "title": "DualView: Serve Current Folder"
      },
      {
        "command": "dualview.openLast",
        "title": "DualView: Open Last Preview"
      }
    ],
    "configuration": {
      "title": "DualView Live Preview",
      "properties": {
        "dualview.autoOpenOnUrl": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open DualView when a dev server URL is detected in terminal",
          "order": 0
        },
        "dualview.autoOpenOnProbe": {
          "type": "boolean",
          "default": true,
          "description": "Automatically probe common ports and open DualView when a server is found",
          "order": 1
        },
        "dualview.probe.ports": {
          "type": "array",
          "default": [5173, 3000, 8080, 4200, 5000, 5500, 8000, 8001, 4000, 9000],
          "description": "Ports to probe for auto-detection",
          "order": 2
        },
        "dualview.mobileSize": {
          "type": "string",
          "default": "430x932",
          "description": "Mobile viewport size (widthxheight)",
          "order": 3
        },
        "dualview.desktopSize": {
          "type": "string",
          "default": "1440x900",
          "description": "Desktop viewport size (widthxheight)",
          "order": 4
        },
        "dualview.popout.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable pop-out in browser feature",
          "order": 5
        },
        "dualview.popout.port": {
          "type": "number",
          "default": 7777,
          "description": "Preferred port for pop-out server (will auto-increment if busy)",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-webview",
    "compile": "tsc -p ./",
    "copy-webview": "mkdir -p out/webview && cp src/webview/*.html out/webview/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@types/serve-static": "^1.15.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "serve-static": "^1.15.0",
    "get-port": "^7.0.0"
  }
}

